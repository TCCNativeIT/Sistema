@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/LayoutCadastroUsu.cshtml";
}

@model TCCBarbearia.Models.Usuario
@using (Html.BeginForm("Cadastro", "Cliente", FormMethod.Post))
{

    <h1>Cadastre-se</h1>

    <main class="main-formulario">

        <section class="input-section">

            @Html.EditorFor(x => x.nome_usu, new
             {
             htmlAttributes = new
                 {
                     id = "txtNome",
                     senha = "txtNome",
                     type = "text",
                     @class = "",
                     placeholder = "Digite o seu nome completo",
                     required = "required",
                     maxLength = "50"
             }
             })
            @Html.ValidationMessageFor(x => x.nome_usu, "", new { @class = "text-danger" })
        </section>

        <section class="input-section">


            @Html.EditorFor(x => x.email_usu, new
       {
           htmlAttributes = new
                {
                    id = "txtEmail",
                    senha = "txtEmail",
                    type = "text",
                    @class = "",
                    placeholder = "Digite seu email",
                    required = "required",
                    maxLength = "50"
           }
       })
            @Html.ValidationMessageFor(x => x.email_usu, "", new { @class = "text-danger" })
        </section>

        <section class="input-section">


            @Html.EditorFor(x => x.tel_usu, new
       {
           htmlAttributes = new
                {
                    id = "txtTel",
                    senha = "txtTel",
                    type = "number",
                    @class = "",
                    placeholder = "Digite seu melhor número",
                    required = "required",
                    maxLength = "11"
           }
       })
            @Html.ValidationMessageFor(x => x.tel_usu, "", new { @class = "text-danger" })
        </section>

        <section class="input-section"

        <section class="input-section">


            @Html.EditorFor(x => x.senha, new
       {
           htmlAttributes = new
                {
                    id = "txtSenha",
                    senha = "txtSenha",
                    type = "password",
                    @class = "",
                    placeholder = "Digite a sua senha",
                    required = "required",
                    maxLength = "10"
           }
       })
            @Html.ValidationMessageFor(x => x.senha, "", new { @class = "text-danger" })
        </section>


        <section class="input-section">

            @Html.EditorFor(x => x.confSenha, new
       {
           htmlAttributes = new
                {
                    id = "txtConfSenha",
                    senha = "txtSenha",
                    type = "password",
                    @class = "",
                    placeholder = "Confirmar senha",
                    required = "required",
                    maxLength = "10"
           }
       })
            @Html.ValidationMessageFor(x => x.confSenha, "", new { @class = "text-danger" })
        </section>


        <button type="submit" class="button-entrar">
            Cadastrar-se
        </button>

        <p style="text-align:center">Já possui conta? @Html.ActionLink("Entrar", "Login", "Cliente") </p>

    </main>



}