    <main class="main">

        <header>
            <h3>Bem vindo Admin!</h3>
        </header>

        <section class="section-main">

            @RenderBody()


        </section>

    </main>

    <script src="~/Scripts/ModalSairScript.js"></script>

</body>
    
</html>
